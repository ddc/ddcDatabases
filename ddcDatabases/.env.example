# ddcDatabases Environment Variables Example
# Copy this file to .env and adjust values as needed

# SQLite Database Settings
SQLITE_FILE_PATH=sqlite.db
SQLITE_ECHO=false
SQLITE_ENABLE_RETRY=false
SQLITE_MAX_RETRIES=1
SQLITE_INITIAL_RETRY_DELAY=1.0
SQLITE_MAX_RETRY_DELAY=30.0

# PostgreSQL Database Settings
POSTGRESQL_HOST=localhost
POSTGRESQL_PORT=5432
POSTGRESQL_USER=postgres
POSTGRESQL_PASSWORD=password
POSTGRESQL_DATABASE=postgres
POSTGRESQL_DB_SCHEMA=public
POSTGRESQL_ECHO=false
POSTGRESQL_AUTOFLUSH=false
POSTGRESQL_EXPIRE_ON_COMMIT=false
POSTGRESQL_AUTOCOMMIT=true
POSTGRESQL_CONNECTION_TIMEOUT=30
POSTGRESQL_POOL_RECYCLE=3600
POSTGRESQL_POOL_SIZE=25
POSTGRESQL_MAX_OVERFLOW=50
POSTGRESQL_SSL_MODE=disable  # disable, allow, prefer, require, verify-ca, verify-full
POSTGRESQL_SSL_CA_CERT_PATH=
POSTGRESQL_SSL_CLIENT_CERT_PATH=
POSTGRESQL_SSL_CLIENT_KEY_PATH=
POSTGRESQL_ENABLE_RETRY=true
POSTGRESQL_MAX_RETRIES=3
POSTGRESQL_INITIAL_RETRY_DELAY=1.0
POSTGRESQL_MAX_RETRY_DELAY=30.0
POSTGRESQL_DISCONNECT_IDLE_TIMEOUT=300

# Microsoft SQL Server Database Settings
MSSQL_HOST=localhost
